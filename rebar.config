{minimum_otp_vsn, "18.3"}.

{deps, [
        {erljwt, {git, "git://github.com/LacunaSpace/erljwt.git", {branch, "master"}}}
       ]
}.

{plugins, [
           {rebar3_lint, {git, "https://github.com/project-fifo/rebar3_lint.git", {branch, "master"}}},
           rebar3_run
          ]}.

{profiles, [
            {test, [
                    {deps, [meck]},
                    {cover_enabled, true}
                   ]}
           ]}.

{elvis, [
         #{dirs => ["."],
           filter => "elvis.config",
           ruleset => elvis_config },
         #{dirs => ["src"],
           filter => "*.erl",
           ruleset => erl_files,
           rules => [{elvis_style, invalid_dynamic_call, #{ignore => [oidcc_client]}}]},
         #{dirs => ["."],
           filter => "Makefile",
           ruleset => makefiles },
         #{dirs => ["."],
           filter => "rebar.config",
           ruleset => rebar_config }
        ] }.
